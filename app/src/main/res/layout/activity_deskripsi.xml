<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgroundlogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeskripsiActivity">


    <ImageView
        android:id="@+id/footageamatir1"
        android:layout_width="405dp"
        android:layout_height="198dp"
        android:background="@drawable/footageamatir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/Backbutton"
        android:layout_width="69dp"
        android:layout_height="57dp"
        android:background="@drawable/dashboardshape2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/ic_back"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/garishorizontal1"
        android:layout_width="401dp"
        android:layout_height="3dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/footageamatir1"
        app:layout_constraintVertical_bias="0.182" />

    <TextView
        android:id="@+id/garisvertical1"
        android:layout_width="3dp"
        android:layout_height="235dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/footageamatir1"
        app:layout_constraintVertical_bias="0.332" />


    <ImageView
        android:id="@+id/posterinfo1"
        android:layout_width="134dp"
        android:layout_height="175dp"
        android:background="@drawable/amatir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.582" />

    <TextView
        android:id="@+id/judul1"
        android:layout_width="109dp"
        android:layout_height="43dp"
        android:fontFamily="monospace"
        android:text="Amatir"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/garisvertical1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/footageamatir1"
        app:layout_constraintVertical_bias="0.905" />

    <TextView
        android:id="@+id/sutradara1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Directed by Kemal Andra"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.693"
        app:layout_constraintStart_toEndOf="@+id/judul1"
        app:layout_constraintTop_toTopOf="@+id/footageamatir1"
        app:layout_constraintVertical_bias="0.327" />

    <TextView
        android:id="@+id/deskripsi1"
        android:layout_width="186dp"
        android:layout_height="220dp"
        android:text="Amatir , is a Short documentary film, the process of making a  film by a group of people who are still amateurs, starting from the pre-production process, the shooting process to a little entertainment by the cast."
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sutradara1"
        app:layout_constraintVertical_bias="0.216" />

    <ImageView
        android:id="@+id/dramatir"
        android:layout_width="193dp"
        android:layout_height="217dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/posterinfo1"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/dramatir" />

    <ImageView
        android:id="@+id/crewamatir"
        android:layout_width="183dp"
        android:layout_height="173dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.964"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/posterinfo1"
        app:layout_constraintVertical_bias="0.728"
        app:srcCompat="@drawable/crewamatir" />

</androidx.constraintlayout.widget.ConstraintLayout>